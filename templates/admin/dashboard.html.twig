{% extends '@EasyAdmin/layout.html.twig' %}
{% block head_javascript %}
	{{ parent() }}
	{{ encore_entry_script_tags('chart') }}
{% endblock %}
{% block page_title %}
	Dashboard
{% endblock %}
{% block main %}
	<div class='row'>
		<h3 class='text-secondary text-center'>RÃ©vue de depense</h3>
		<div class="row">
			<div class="col-12">
				{{ form_start(form, {'attr': {'class': 'form-inline'}})}}
				<div class="form-group me-2">
					{{ form_row(form.dates)}}
				</div>
				<button type="submit" class="btn btn-primary btn-search-depense">
					<i class='fas fa-search'></i>
				</button>
				{{ form_end(form)}}
