		</div>
		<div class="row">
			<div class="col-6">
				<div class="card">
					<div class="card-header">
						<h5 class='title-card'>
							<strong>
								Par compte salaire
							</strong>
						</h5>
					</div>
					<div class="card-body">
						{{ render_chart(chart_depense_compte_salaire, {'class': 'depense-compte-salaire'}) }}
					</div>
				</div>
			</div>
			<div class="col-6"></div>
		</div>
	</div>

{% endblock main %}
